{
	"name": "evoweb/store-finder",
	"type": "typo3-cms-extension",
	"description": "Store Finder",
	"homepage": "https://www.evoweb.de",
	"license": [
		"GPL-2.0-or-later"
	],
	"keywords": [
		"store finder",
		"store locator",
		"poi",
		"shop list",
		"Google Maps",
		"OpenStreetMap",
		"open street map"
	],
	"support": {
		"source" : "https://github.com/evoWeb/store_finder",
		"issues": "https://github.com/evoWeb/store_finder/issues",
		"docs": "https://docs.typo3.org/p/evoweb/store-finder/master/en-us/"
	},
	"config": {
		"bin-dir": "bin",
		"vendor-dir": "vendor",
		"platform": {
			"php": "8.1.1"
		},
		"sort-packages": true,
		"allow-plugins": {
			"composer/package-versions-deprecated": true,
			"php-http/discovery": true,
			"typo3/class-alias-loader": true,
			"typo3/cms-composer-installers": true,
			"sbuerk/typo3-cmscomposerinstallers-testingframework-bridge": true
		}
	},
	"require": {
		"php": "^8.1",
        "ext-pdo": "*",
		"geocoder-php/google-maps-provider": "^4.7.0",
		"php-http/guzzle7-adapter": "^1.0",
		"phpoffice/phpspreadsheet": "^1.28.0",
		"sjbr/static-info-tables": "dev-master",
		"typo3/cms-core": "^12.2 || dev-main",
		"typo3/cms-extbase": "^12.2 || dev-main",
		"typo3/cms-fluid": "^12.2 || dev-main",
		"typo3/cms-frontend": "^12.2 || dev-main"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.6.1",
		"sbuerk/typo3-cmscomposerinstallers-testingframework-bridge": "dev-main",
		"typo3/testing-framework": "dev-main"
	},
	"extra": {
		"typo3/cms": {
			"web-dir": ".Build/Web",
			"extension-key": "store_finder"
		}
	},
	"scripts": {
		"prepare-release": [
			"rm -rf .Build",
			"rm -rf .github",
			"rm -rf Tests",
			"rm .gitignore",
			"sed -i \"s/version' => '.*'/version' => '$(echo ${GITHUB_REF} | cut -d / -f 3)'/\" ext_emconf.php\n"
		]
	},
	"autoload": {
		"psr-4": {
			"Evoweb\\StoreFinder\\": "Classes/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Evoweb\\StoreFinder\\Tests\\": "Tests/"
		}
	},
	"repositories": {
		"static-info-tables": {
			"type": "git",
			"url": "https://github.com/garbast/static_info_tables.git"
		}
	}
}
